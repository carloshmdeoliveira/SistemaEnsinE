@model SistemaEnsinE.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1 class="mb-3">Detalhes do Produto</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

    <dt class="col-sm-3">Preço</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Preco)</dd>

    <dt class="col-sm-3">Situação</dt>
    <dd class="col-sm-9">
        @if (Model.Situacao)
        {
            <span class="badge bg-success">Disponível</span>
        }
        else
        {
            <span class="badge bg-secondary">Indisponível</span>
        }
    </dd>

    <dt class="col-sm-3">Comissão (%)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Comissao)</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ProdutoId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>
