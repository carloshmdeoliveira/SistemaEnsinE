@model SistemaEnsinE.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h1 class="mb-4">Cadastrar Produto</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Preco" class="form-label">Preço</label>
                <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                <input asp-for="Situacao" class="form-check-input" />
                <label asp-for="Situacao" class="form-check-label">Produto Disponível</label>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Comissao" class="form-label">Comissão (%)</label>
                <input asp-for="Comissao" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Comissao" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
