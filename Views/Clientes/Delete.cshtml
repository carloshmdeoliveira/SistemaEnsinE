@model SistemaEnsinE.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1>Excluir Cliente</h1>

<h5 class="text-danger">Tem certeza que deseja excluir este cliente?</h5>

<div class="mt-4">
    <dl class="row">
        <dt class="col-sm-3">Nome Completo</dt>
        <dd class="col-sm-9">@Model.NomeCompleto</dd>

        <dt class="col-sm-3">Telefone</dt>
        <dd class="col-sm-9">@Model.Telefone</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Desconto</dt>
        <dd class="col-sm-9">@Model.Desconto</dd>

        <dt class="col-sm-3">Vendedor</dt>
        <dd class="col-sm-9">@Model.Vendedor</dd>

        <dt class="col-sm-3">Produto</dt>
        <dd class="col-sm-9">@Model.Produto?.Nome</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ClienteId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
