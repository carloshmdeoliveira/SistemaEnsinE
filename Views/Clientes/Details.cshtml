@model SistemaEnsinE.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2 class="fw-bold mb-4">Detalhes do Cliente</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nome Completo</dt>
            <dd class="col-sm-9">@Model.NomeCompleto</dd>

            <dt class="col-sm-3 fw-bold">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>

            <dt class="col-sm-3 fw-bold">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 fw-bold">Desconto (%)</dt>
            <dd class="col-sm-9">@Model.Desconto</dd>

            <dt class="col-sm-3 fw-bold">Vendedor</dt>
            <dd class="col-sm-9">@Model.Vendedor</dd>

            <dt class="col-sm-3 fw-bold">Produto</dt>
            <dd class="col-sm-9">@Model.Produto?.Nome</dd>
        </dl>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
</div>
