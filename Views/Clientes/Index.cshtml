@model IEnumerable<SistemaEnsinE.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Clientes</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle me-1"></i> Cadastrar Novo Cliente
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NomeCompleto)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Desconto)</th>
            <th>@Html.DisplayNameFor(model => model.Vendedor)</th>
            <th>Produto</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NomeCompleto)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Desconto)</td>
                <td>@Html.DisplayFor(modelItem => item.Vendedor)</td>
                <td>
                    @(item.Produto != null
                                    ? Html.DisplayFor(modelItem => item.Produto.Nome)
                                    : "")
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-sm btn-primary">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-sm btn-info text-white">
                        <i class="bi bi-eye"></i> Detalhes
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </a>
                </div>
            </td>
        </tr>
                }
    </tbody>
</table>
